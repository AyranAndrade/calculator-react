{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react"
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}